#include "main.h"

/**
* rev_string - Reverses a string
* @s: The string to be reverse
* Return: void
*/
void rev_string(char *s)
{
	int b, c, d;
	char *a, plc;

	a = s;

	while (s[c] != '\0')
		c++;
	for (d = 1; d < c; d++)
		a++;
	for (b = 0; b < (c / 2); b++)
	{
		aux = s[b];
		s[b] = *a;
		*a = plc;
		a--;
	}
}
